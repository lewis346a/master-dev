<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_f8"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#EA3E3F"
        android:layout_height="@dimen/dp130">
        <RelativeLayout
            android:paddingLeft="@dimen/dp30"
            android:paddingRight="@dimen/dp30"
            android:layout_marginTop="@dimen/dp40"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:id="@+id/iv_back"
                android:src="@mipmap/back"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp44" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_marginLeft="@dimen/dp15"
                android:textColor="@color/black33"
                android:textSize="@dimen/dp38"
                android:text="标题"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv1"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="@dimen/dp44"
                    android:layout_height="@dimen/dp44" />
                <ImageView
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp75"
                    android:layout_toLeftOf="@+id/iv1"
                    android:id="@+id/iv2"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="@dimen/dp44"
                    android:layout_height="@dimen/dp44" />
                <ImageView
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp75"
                    android:layout_toLeftOf="@+id/iv2"
                    android:id="@+id/iv3"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="@dimen/dp44"
                    android:layout_height="@dimen/dp44" />
                <TextView
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp30"
                    android:text="功能"
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
     <LinearLayout
         android:paddingRight="@dimen/dp30"
         android:paddingLeft="@dimen/dp30"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:background="@drawable/bt_white_circle"
         android:layout_marginRight="@dimen/dp30"
         android:layout_marginLeft="@dimen/dp30"
         android:layout_marginTop="@dimen/d40"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp90">
        <TextView

            android:text="DBC"
            android:textSize="@dimen/dp32"
            android:textColor="@color/black33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
         <EditText
             android:layout_marginRight="@dimen/dp20"
             android:gravity="right"
             android:id="@+id/tv_num"
             android:background="@null"
              android:hint="填写数量"
             android:textSize="@dimen/dp32"
             android:textColor="@color/black99"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content" />
         <TextView
             android:textSize="@dimen/dp32"
             android:textColor="@color/black33"
             android:text="枚"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </LinearLayout>
     <LinearLayout
         android:paddingRight="@dimen/dp30"
         android:paddingLeft="@dimen/dp30"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:background="@drawable/bt_white_circle"
         android:layout_marginRight="@dimen/dp30"
         android:layout_marginLeft="@dimen/dp30"
         android:layout_marginTop="@dimen/d40"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp90">
        <TextView

            android:text="祝福语"
            android:textSize="@dimen/dp32"
            android:textColor="@color/black33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
         <EditText
             android:layout_marginRight="@dimen/dp20"
             android:gravity="right"
             android:id="@+id/tv_zfy"
             android:background="@null"
              android:hint="恭喜发财，大吉大利"
             android:textSize="@dimen/dp32"
             android:textColor="@color/black99"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content" />

     </LinearLayout>
    <Button
        android:id="@+id/bt_login"
        android:textSize="@dimen/dp38"
        android:background="@drawable/bt_red_circle1"
        android:textColor="@color/white"
        android:text="@string/bt_login"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginTop="@dimen/dp120"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80" />
</LinearLayout>